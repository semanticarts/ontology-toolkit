@prefix : <https://data.clientX.com/> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix skos: <http://www.w3.org/2004/02/skos/core#> .

:SimpleBaseClass a owl:Class;
    skos:prefLabel "Simple Base Class" .

:IntermediateClass a owl:Class;
    skos:prefLabel "Intermediate Class";
    rdfs:subClassOf :SimpleBaseClass .

:ComplexClass
	a owl:Class ;
	owl:equivalentClass [
		a owl:Class ;
		owl:intersectionOf (
			:IntermediateClass
			[
				a owl:Restriction ;
				owl:onProperty :relatedTo ;
				owl:someValuesFrom :SimpleBaseClass ;
			]
		) ;
	] ;
    skos:prefLabel "Complex Class" .

:relatedTo a owl:ObjectProperty ;
    skos:prefLabel "related to" .

:Simple a :SimpleBaseClass .

:Intermediate a :IntermediateClass .

:Complex a :IntermediateClass ;
    :relatedTo :Simple .


